# ============================================================================
# Trucker Mobile - Environment Configuration
# Copy this file to .env and fill in the values
# ============================================================================

# ===================
# Database Configuration
# ===================
# Shared PostgreSQL database with desktop app
DATABASE_URL=postgresql://trucker_user:your_password_here@trucker-postgres:5432/trucker_web

# ===================
# Authentication
# ===================
# JWT secret - MUST match the desktop app's JWT_SECRET for shared auth
JWT_SECRET=your_jwt_secret_here_must_match_desktop

# ===================
# Server Configuration
# ===================
NODE_ENV=production
PORT=5003

# ===================
# Optional Settings
# ===================
# Timezone
TZ=Asia/Bangkok

